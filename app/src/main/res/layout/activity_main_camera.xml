
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/cameraView" />

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/main_sl"
            sl:scale_base_width="1.92"
            sl:scale_base_height="1.08">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_camera_change_selector"
                android:id="@+id/btn_camera_change"
                sl:scale_top="0.02"
                sl:scale_left="0.02"
                sl:scale_width="0.15"
                sl:scale_height="0.15"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_camera_record_selector"
                android:id="@+id/btn_camera_record"
                sl:scale_top="0.45"
                sl:scale_left="1.7"
                sl:scale_width="0.18"
                sl:scale_height="0.18"
                />

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </FrameLayout>

</LinearLayout>
