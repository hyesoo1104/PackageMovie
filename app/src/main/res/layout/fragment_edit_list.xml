<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ohhye.packagemovie.fragment.Edit_ListFragment">

    <!-- TODO: 발리로 서버에 있는거 가져와서 리스트 구현 -->
    <ListView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/edit_scene_list"
        android:layout_above="@+id/edit_scene_list_item_remove"
        android:layout_alignParentStart="true" />

    <ImageView android:layout_width="match_parent"
        android:id = "@+id/edit_scene_list_item_remove"
        android:layout_height="50dp"
        android:padding ="10dp"
        android:src="@drawable/icon_trashcan"
        android:background="#dbe4e7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>