<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context=".EditAcitivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff7f7f7"
        sl:scale_top="0.0"
        sl:scale_left="0.0"
        sl:scale_base_width="1.23"
        sl:scale_base_height="0.35">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/icon_edit"
            sl:scale_top="0.0"
            sl:scale_left="0.0"
            sl:scale_width="0.15"
            sl:scale_height="0.15"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_title"
            android:gravity="center_vertical"
            android:text = "편집"
            android:textColor = "#ffffff"
            sl:scale_textsize="0.065"
            sl:scale_top="0.0"
            sl:scale_left="0.15"
            sl:scale_width="1.08"
            sl:scale_height="0.15"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            sl:scale_top="0.15"
            sl:scale_left="0.0"
            sl:scale_width="1.23"
            sl:scale_height="0.2"
            android:background="#ffabe4ff"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_edit_add"
            android:background="@drawable/btn_add_video"
            sl:scale_top="0.15"
            sl:scale_left="0.015"
            sl:scale_width="0.2"
            sl:scale_height="0.2"/>

        <Button
            android:id="@+id/btn_edit_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_scenelist_selected"
            sl:scale_top="0.15"
            sl:scale_left="0.215"
            sl:scale_width="0.2"
            sl:scale_height="0.2"/>

        <Button
            android:id="@+id/btn_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add_subtitle"
            sl:scale_top="0.15"
            sl:scale_left="0.415"
            sl:scale_width="0.2"
            sl:scale_height="0.2"/>


        <Button
            android:id="@+id/btn_edit_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_edit_trans"
            sl:scale_top="0.15"
            sl:scale_left="0.615"
            sl:scale_width="0.2"
            sl:scale_height="0.2"/>

        <Button
            android:id="@+id/btn_edit_bgm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bgm"
            sl:scale_top="0.15"
            sl:scale_left="0.815"
            sl:scale_width="0.2"
            sl:scale_height="0.2"/>


        <Button
            android:id="@+id/btn_edit_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_edit_complete"
            sl:scale_top="0.15"
            sl:scale_left="1.015"
            sl:scale_width="0.2"
            sl:scale_height="0.2"/>



    </com.ssomai.android.scalablelayout.ScalableLayout>

    <fragment
        android:id="@+id/edit_fragment"
        android:name="com.example.ohhye.packagemovie.fragment.Edit_SceneListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/activity_main_edit"
     />



</LinearLayout>