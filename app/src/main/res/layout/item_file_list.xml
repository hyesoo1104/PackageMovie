<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="#ffffff"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/file_list_item_thumbnail"
        android:src="@drawable/ic_launcher"
        android:layout_width="200px"
        android:layout_height="160px"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/file_list_item_duration"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Duration"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="#ffbebebe"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/file_list_item_name"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight = "10dp"
        android:text="File Name"
        android:textColor="#ff969696"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/file_list_item_thumbnail" />

    <Button
        android:layout_width="80px"
        android:layout_height="80px"
        android:id="@+id/btn_file_download"
        android:background="@drawable/btn_file_download"/>

</LinearLayout>