<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context=".FileManagementActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff7f7f7"
        sl:scale_top="0.0"
        sl:scale_left="0.0"
        sl:scale_base_width="1.23"
        sl:scale_base_height="0.15">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/icon_file"
            sl:scale_top="0.0"
            sl:scale_left="0.0"
            sl:scale_width="0.15"
            sl:scale_height="0.15"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/file_title"
            android:gravity="center_vertical"
            android:text = "파일관리"
            android:textColor = "#ffffff"
            sl:scale_textsize="0.065"
            sl:scale_top="0.0"
            sl:scale_left="0.15"
            sl:scale_width="0.93"
            sl:scale_height="0.15"
            />
        <ImageView
            android:id="@+id/btn_file_add"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/btn_file_add_selector"
            sl:scale_top="0.0"
            sl:scale_left="1.08"
            sl:scale_width="0.15"
            sl:scale_height="0.15"
            />

    </com.ssomai.android.scalablelayout.ScalableLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>


</LinearLayout>