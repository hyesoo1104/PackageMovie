<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main2"
    tools:context=".MainActivity"
    android:gravity="center"
    android:layout_gravity="center">


    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main_sl"
        sl:scale_base_width="1.08"
        sl:scale_base_height="1.92">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_title"
            sl:scale_top="0.1"
            sl:scale_left="0.14"
            sl:scale_width="0.8"
            sl:scale_height="0.3"
            />


        <Button
            android:id="@+id/btn_main_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_camera_selector"
            sl:scale_left="0.015"
            sl:scale_top="0.45"
            sl:scale_width="0.5"
            sl:scale_height="0.65"
            sl:textview_wrapcontent_resizesurrounded="true"/>

        <Button
            android:id="@+id/btn_main_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_edit_selector"
            sl:scale_top="0.45"
            sl:scale_left="0.57"
            sl:scale_width="0.5"
            sl:scale_height="0.65"
            sl:textview_wrapcontent_resizesurrounded="true"/>

        <Button
            android:id="@+id/btn_main_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_file_selector"
            sl:scale_top="1.15"
            sl:scale_left="0.015"
            sl:scale_width="0.5"
            sl:scale_height="0.65"
            sl:textview_wrapcontent_resizesurrounded="true"/>


        <Button
            android:id="@+id/btn_main_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main_setting_selector"
            sl:scale_top="1.15"
            sl:scale_left="0.57"
            sl:scale_width="0.5"
            sl:scale_height="0.65"
            sl:textview_wrapcontent_resizesurrounded="true"/>




    </com.ssomai.android.scalablelayout.ScalableLayout>




</RelativeLayout>