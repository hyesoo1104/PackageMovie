<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_change_pwd"
    tools:context="com.example.ohhye.packagemovie.activity.ChangePasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_current_password"
        />

    <EditText
        android:id="@+id/settings_current_pwd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#66fefffd"
        android:textColor="#baffffff"
        android:textColorHint="#88ffffff"
        android:textColorHighlight="#ffffce73"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:scrollbarStyle="insideInset"
        android:inputType="text"
        android:hint="현재 비밀번호" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_change_pwd"
        />

    <EditText
        android:id="@+id/settings_change_pwd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#66fefffd"
        android:textColor="#baffffff"
        android:textColorHint="#88ffffff"
        android:textColorHighlight="#ffffce73"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:scrollbarStyle="insideInset"
        android:inputType="text"
        android:hint="변경할 비밀번호" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_comfirm_change_pwd"
        />

    <EditText
        android:id="@+id/settings_confirm_change_pwd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#66fefffd"
        android:textColor="#baffffff"
        android:textColorHint="#88ffffff"
        android:textColorHighlight="#ffffce73"
        android:paddingLeft="10dp"
        android:layout_marginBottom="80dp"
        android:scrollbarStyle="insideInset"
        android:inputType="text"
        android:hint="변경할 비밀번호 확인" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right">

        <Button
            android:id="@+id/btn_change"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_pwd_change_selector"/>

        </LinearLayout>

</LinearLayout>
